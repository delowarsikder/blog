<div>
  <div class="card">

    <h2 class="card-header">
    <%= @showArticle.title%>
    </h2>

    <div class="card-body">

      <%if @showArticle.body.length >300 %>
        <%=link_to truncate(@showArticle.body,length:300)%>
      <%else%>
        <%=@showArticle.body%>
      <%end%>

    <br>
    <br>
    <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
      <%= link_to "Home", articles_path, class:"btn btn-primary"%> |
      <%= link_to "Edit" , edit_article_path(@showArticle), class:"btn btn-secondary"%> |
      <%= link_to "Destroy", article_path(@showArticle), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} ,class:"btn btn-danger"%>
    </div>
    </div>

  </div>



  <%# show all comments %>
  <%# <%= render @showArticle.comments%> 
  <%= render 'comments/comment'%>

  <%# Comment section  %>
  <%= render 'comments/form'%>

</div>
